@model KLMS.Models.MockTestViewModel
@{
    ViewData["Title"] = "Thi thử trên máy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        @* <h2 class="fw-bold text-primary mb-2">GIAO DIỆN THÍ SINH SAU KHI ĐĂNG NHẬP</h2> *@
        <h4 class="text-primary">MÔ PHỎNG KỲ THI TỐT NGHIỆP THPT 2025 TRÊN MÁY</h4>
    </div>

    <!-- Thông tin thí sinh và Hội đồng thi -->
    <div class="row g-4 mb-4">
        <!-- Thông tin thí sinh -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-primary">
                        <i class="bi bi-person-badge me-2"></i>THÔNG TIN THÍ SINH
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <p class="mb-2"><strong>Họ và tên:</strong></p>
                            <p class="text-muted">@Model.StudentInfo.FullName</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>SBD:</strong></p>
                            <p class="text-muted">@Model.StudentInfo.StudentId</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <p class="mb-2"><strong>Ngày sinh:</strong></p>
                            <p class="text-muted">@Model.StudentInfo.DateOfBirth.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>Giới tính:</strong></p>
                            <p class="text-muted">@Model.StudentInfo.Gender</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <p class="mb-2"><strong>Ca thi:</strong></p>
                            <p class="text-muted">@Model.StudentInfo.Session</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hội đồng thi -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-primary">
                        <i class="bi bi-building me-2"></i>HỘI ĐỒNG THI
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="mb-2"><strong>Hội đồng thi:</strong></p>
                        <p class="text-muted">@Model.Council.CouncilName</p>
                    </div>
                    <div class="mb-3">
                        <p class="mb-2"><strong>Điểm thi:</strong></p>
                        <p class="text-muted">@Model.Council.TestLocation</p>
                    </div>
                    <div>
                        <p class="mb-2"><strong>Phòng thi:</strong></p>
                        <p class="text-muted">@Model.Council.Room</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách môn thi -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-list-check me-2"></i>DANH SÁCH MÔN THI
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                @foreach (var subject in Model.Subjects)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="subject-item d-flex justify-content-between align-items-center p-3 border rounded">
                            <span class="fw-medium">@subject.SubjectName</span>
                            @if (subject.IsActive)
                            {
                                <a href="@Url.Action("StartTest", "MockTest", new { subjectCode = subject.SubjectCode })"
                                   class="btn btn-primary btn-sm">
                                    Vào thi
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm" disabled>Vào thi</button>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Nút quay lại -->
    <div class="text-center mb-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>
</div>

@section Styles {
    <style>
        .subject-item {
            background-color: #f8f9fa;
            transition: all 0.3s ease;
        }

        .subject-item:hover {
            background-color: #e9ecef;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-bottom: 2px solid #dee2e6;
            border-radius: 10px 10px 0 0 !important;
        }

        .text-primary {
            color: #1b6ec2 !important;
        }

        .btn-primary {
            background-color: #1b6ec2;
            border-color: #1861ac;
        }

        .btn-primary:hover {
            background-color: #1861ac;
            border-color: #15508a;
        }
    </style>
}
