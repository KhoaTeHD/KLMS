@section Scripts {
    <script>
        $(document).ready(function () {
            // Contact form submission
            $('.contact-form').on('submit', function (e) {
                e.preventDefault();

                // Simulate form submission
                const btn = $(this).find('button[type="submit"]');
                const originalText = btn.html();

                btn.html('<i class="bi bi-hourglass-split me-2"></i>Đang gửi...').prop('disabled', true);

                setTimeout(function () {
                    btn.html('<i class="bi bi-check-circle me-2"></i>Đã gửi!').removeClass('btn-primary').addClass('btn-success');

                    setTimeout(function () {
                        btn.html(originalText).prop('disabled', false).removeClass('btn-success').addClass('btn-primary');
                    }, 2000);
                }, 1500);
            });
        });

        // Print schedule function
        function printSchedule() {
            const printContent = document.querySelector('#scheduleModal .modal-body').innerHTML;
            const originalContent = document.body.innerHTML;

            document.body.innerHTML = `
                        <div style="padding: 20px;">
                            <h2 style="text-align: center; margin-bottom: 20px;">Thời khóa biểu trung tâm KLMS</h2>
                            ${printContent}
                        </div>
                    `;

            window.print();
            document.body.innerHTML = originalContent;
            location.reload();
        }

        // Download schedule function
        function downloadSchedule() {
            // Simulate download
            const link = document.createElement('a');
            link.href = 'data:text/plain;charset=utf-8,Thời khóa biểu trung tâm KLMS - Tải xuống thành công!';
            link.download = 'tkb_klms.txt';
            link.click();

            // Show notification
            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check-circle me-1"></i>Đã tải xuống!';
            btn.classList.remove('btn-success');
            btn.classList.add('btn-secondary');

            setTimeout(function () {
                btn.innerHTML = originalText;
                btn.classList.remove('btn-secondary');
                btn.classList.add('btn-success');
            }, 2000);
        }
    </script>
}