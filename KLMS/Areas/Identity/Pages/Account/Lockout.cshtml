@page
@model LockoutModel
@{
    ViewData["Title"] = "Tài khoản bị khóa";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-x text-danger" style="font-size: 4rem;"></i>
                    </div>

                    <h1 class="fw-bold text-danger mb-3">@ViewData["Title"]</h1>

                    <div class="alert alert-danger border-0">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Truy cập bị hạn chế
                        </h5>
                        <p class="mb-0">
                            Tài khoản của bạn đã bị khóa tạm thời do nhiều lần đăng nhập không thành công.
                            Vui lòng thử lại sau ít phút.
                        </p>
                    </div>

                    <div class="row g-3 mt-3">
                        <div class="col-sm-6">
                            <a asp-page="./ForgotPassword" class="btn btn-primary w-100">
                                <i class="bi bi-key me-2"></i>Quên mật khẩu?
                            </a>
                        </div>
                        <div class="col-sm-6">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-house me-2"></i>Về trang chủ
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Information Card -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Tại sao tài khoản bị khóa?
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-danger">Nguyên nhân thường gặp:</h6>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-x-circle text-danger me-2"></i>
                                    Nhập sai mật khẩu nhiều lần
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-x-circle text-danger me-2"></i>
                                    Hoạt động đăng nhập bất thường
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-x-circle text-danger me-2"></i>
                                    Bảo mật tự động kích hoạt
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-success">Cách khắc phục:</h6>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-clock text-primary me-2"></i>
                                    Đợi 15-30 phút trước khi thử lại
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-key text-primary me-2"></i>
                                    Sử dụng chức năng quên mật khẩu
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-person-gear text-primary me-2"></i>
                                    Liên hệ quản trị viên nếu cần
                                </li>
                            </ul>
                        </div>
