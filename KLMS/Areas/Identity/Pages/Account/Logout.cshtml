@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="mb-4">
                                <i class="bi bi-box-arrow-right text-warning" style="font-size: 4rem;"></i>
                            </div>

                            <h2 class="fw-bold text-primary mb-3">@ViewData["Title"]</h2>
                            <p class="text-muted mb-4">Bạn có chắc chắn muốn đăng xuất khỏi tài khoản?</p>

                            <form asp-area="Identity" asp-page="/Account/Logout"
                                  asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-danger btn-lg">
                                        <i class="bi bi-box-arrow-right me-2"></i>Xác nhận đăng xuất
                                    </button>
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-left me-2"></i>Hủy và quay lại
                                    </a>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="mb-4">
                                <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                            </div>

                            <h2 class="fw-bold text-success mb-3">Đăng xuất thành công!</h2>
                            <p class="text-muted mb-4">Bạn đã đăng xuất khỏi hệ thống thành công.</p>

                            <div class="d-grid gap-2">
                                <a asp-page="./Login" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập lại
                                </a>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-house me-2"></i>Về trang chủ
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <!-- Session Info -->
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>Thông tin phiên làm việc
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <i class="bi bi-shield-check text-success d-block mb-2" style="font-size: 1.5rem;"></i>
                                <small class="text-muted">Dữ liệu được bảo vệ</small>
                            </div>
                            <div class="col-4">
                                <i class="bi bi-clock text-primary d-block mb-2" style="font-size: 1.5rem;"></i>
                                <small class="text-muted">Phiên tự động hết hạn</small>
                            </div>
                            <div class="col-4">
                                <i class="bi bi-device-ssd text-info d-block mb-2" style="font-size: 1.5rem;"></i>
                                <small class="text-muted">Cache được xóa</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Post-logout actions -->
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-shield-check me-2"></i>Bảo mật tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-success">Đã thực hiện:</h6>
                                <ul class="list-unstyled">
                                    <li><i class="bi bi-check text-success me-2"></i>Xóa session</li>
                                    <li><i class="bi bi-check text-success me-2"></i>Xóa cookies đăng nhập</li>
                                    <li><i class="bi bi-check text-success me-2"></i>Vô hiệu hóa token</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-primary">Khuyến nghị:</h6>
                                <ul class="list-unstyled">
                                    <li><i class="bi bi-info-circle text-primary me-2"></i>Đóng trình duyệt</li>
                                    <li><i class="bi bi-info-circle text-primary me-2"></i>Xóa lịch sử duyệt</li>
                                    <li><i class="bi bi-info-circle text-primary me-2"></i>Đăng xuất các thiết bị khác</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
        }
    </style>
}