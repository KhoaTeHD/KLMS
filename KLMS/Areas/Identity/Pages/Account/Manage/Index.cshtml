@page
@model IndexModel
@{
    ViewData["Title"] = "Quản lý tài khoản";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar Navigation -->
        <div class="col-md-3 mb-4">
            <partial name="_ManageNav" />
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">
                                <i class="bi bi-at me-1"></i>Tên đăng nhập (Email)
                            </label>
                            <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" disabled />
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Tên đăng nhập không thể thay đổi.
                                <a asp-page="./Email" class="text-decoration-none">Thay đổi email tại đây</a>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label">
                                <i class="bi bi-telephone me-1"></i>Số điện thoại
                            </label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại của bạn" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button id="update-profile-button" type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>Thao tác nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-page="./Email" class="btn btn-outline-primary">
                                    <i class="bi bi-envelope me-2"></i>Thay đổi Email
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-page="./ChangePassword" class="btn btn-outline-secondary">
                                    <i class="bi bi-shield-lock me-2"></i>Đổi mật khẩu
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}